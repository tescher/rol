<%= form_tag(volunteers_path, method: "get", id: "dialogFormSearchVolunteers", remote: true) do %>
    <div class="container">
      <div class="row">
        <div class="col-md-5">

          <div class="row">
            <div class="col-md-2">
              <%= label_tag :last_name  %><br>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :last_name, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              <%= label_tag :city %><br>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :city, nil, class: 'form-control' %>
            </div>
          </div>
        </div>

      </div>

    </div>

    <%= hidden_field_tag :dialog, "true" %>


<% end %>


