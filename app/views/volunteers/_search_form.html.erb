<%= form_tag(volunteers_path, method: "get") do %>
    <div class="container">
      <div class="row">
        <div class="col-md-5">

          <div class="row">
            <div class="col-md-2">
              <%= label_tag :last_name  %><br>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :last_name, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              <%= label_tag :interests %><br>
            </div>
            <div class="col-md-8">
              <%= select_tag :interest_ids, option_groups_from_collection_for_select(InterestCategory.all, :interests, :name, :id, :option_formatter), { :multiple => true, class: "form-control"}  %>
            </div>
          </div>

        </div>

        <div class="col-md-5">

          <div class="row">
            <div class="col-md-2">
              <%= label_tag :city %><br>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :city, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="row">&nbsp;</div>
          <div class="row">
            <div class="col-md-10">
              <div class="checkbox">
                <label>
                  <%= check_box_tag :show_all %> Show all
                </label>
              </div>
            </div>
          </div>


        </div>
      </div>

    </div>
    <%= hidden_field_tag :format_type, "html", class: "request_format" %>

    <div class="actions">
      <%= submit_tag "Search", class: "btn btn-primary", onclick: "change_format('html');" %>
      <%= submit_tag "Export", class: "btn btn-primary", onclick: "change_format('xls');" %>
      <%= link_to 'Back', root_path, class: "btn btn-primary" %>
    </div>
<% end %>


