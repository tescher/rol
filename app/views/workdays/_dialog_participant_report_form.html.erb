<%= form_tag(participant_report_workdays_path, method: "get", id: "dialogParticipantReportForm", target: "_blank") do %>
  <div class="container modal-dialog">
        <div class="row">
          <div class="col-md-6">
            <%= label_tag :report_format %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= select_tag(:report_format, options_for_select([["Screen",1], ["Excel",2]]), {multiple:false, class: "form-control"}) %>
          </div>
          <div class="col-md-6">
            <div class="checkbox">
              <label>
                <%= check_box_tag :summary_only %> Summary Only
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= label_tag :from_date %><br>
          </div>
          <div class="col-md-6">
            <%= label_tag :to_date %><br>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= text_field_tag :from_date, nil, id: 'fromdatepicker', class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <%= text_field_tag :to_date, Date.today.strftime("%m/%d/%Y"), id: 'todatepicker', class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= label_tag :projects %><br>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= select_tag :project_ids, options_from_collection_for_select(Project.all.order(:name), :id, :name), { :multiple => true, class: "form-control"}  %>
          </div>
        </div>


  </div>


  <%= hidden_field_tag :object_name, @objectName %>
  <%= hidden_field_tag :object_id, @objectId %>


<% end %>
