<% provide(:title, 'Workdays by Project') %>
<h1>Workdays by Project</h1>

<% got_info = false %>

<% @project_info_volunteers.each do |pv| %>
    <% got_info = true %>
    <% po = @project_info_organizations.select { |p| p.project.id == pv.project_id }[0] %>
    <h4>Project: <%= Project.find(pv.project_id).name %></h4>
    <h5>Distinct Project Volunteers: <%= pv.num_volunteers %>,  Volunteer Shifts: <%= pv.num_shifts %>, Volunteer Hours: <%= pv.total_volunteer_hours %></h5>
    <h5>Distinct Project Organizations: <%= po.num_organizations %>,  Organization Hours: <%= po.total_organization_hours %></h5>

    <ul class="listing">
      <div class="row">
        <li>
          <div class="col-md-2">
            <u>Workday</u>
          </div>
          <div class="col-md-3">
            <u>Date</u>
          </div>
          <div class="col-md-1">
            <u>Volunteer Shifts</u>
          </div>
          <div class="col-md-1">
            <u>Volunteer Hours</u>
          </div>
          <div class="col-md-1">
            <u>Organizations</u>
          </div>
          <div class="col-md-1">
            <u>Organization Hours</u>
          </div>
        </li>
      </div>

      <% logger.info simple_format @workdays.to_yaml %>

      <% @workdays.select { |w| w.project_id == pv.project_id }.each do |w| %>
          <div class="row clickable" href="<%=add_participants_workday_path(w, project_id: pv.project_id)%>">
            <li>
              <div class="col-md-2">
                <span class="no-overflow"><%= w.name %></span>
              </div>
              <div class="col-md-3">
                <%= w.workdate.strftime("%A, %B %-d, %Y") %>
              </div>
              <div class="col-md-1">
                <%= w.num_volunteers %>
              </div>
              <div class="col-md-1">
                <%= w.volunteer_hours %>
              </div>
              <div class="col-md-1">
                <%= w.num_organizations %>
              </div>
              <div class="col-md-1">
                <%= w.organization_hours %>
              </div>
            </li>
          </div>
      <% end %>
    </ul>
    <br />
<% end %>
<% if !got_info %>
    <h4>No workdays found with the given criteria</h4>
<% else %>
    <h4><u>Report Totals</u></h4>
    <h4>Distinct Volunteers: <%= @report_info_volunteers["num_volunteers"] %> Volunteer Shifts: <%= @report_info_volunteers["num_shifts"] %> Volunteer Hours: <%= '%.1f' % @report_info_volunteers["total_volunteer_hours"].to_f %></h4>
    <h4>Distinct Organizations: <%= @report_info_organizations["num_organizations"] %> Organization Hours: <%= '%.1f' % @report_info_organizations["total_organization_hours"].to_f %></h4>
<% end %>

<div class="row">
  <div class="col-md-11">
    <div class="actions pull-right">
      <%= link_to 'Back', report_workdays_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>


