<%= form_for(@workday) do |f| %>
    <%= @object = f.object
        render 'shared/error_messages' %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control', autofocus: 'true' %>
        </div>
        <div class="field">
          <%= f.label :notes %><br>
          <%= f.text_area :notes, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :workdate %><br>
          <%= f.text_field :workdate,  value: @workday.workdate.nil? ? Date.today.strftime("%m/%d/%Y") : @workday.workdate.strftime("%m/%d/%Y") , id: 'workdatepicker', class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-11">
        <div class="actions pull-right">

          <%= f.hidden_field(:project_id) %>
          <%= render partial: "shared/form_actions", locals: {f: f, cancel: workdays_path(project_id: @project.id), non_admin_delete: true} %>
        </div>
      </div>
    </div>

<% end %>
