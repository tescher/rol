<%= form_tag(report_workdays_path, method: "get") do %>
    <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-3">

          <div class="row">
            <div class="col-md-6">
              <%= label_tag :report_type %>
            </div>
            <div class="col-md-6">
              <%= label_tag :report_format %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= select_tag(:report_type, options_for_select(@report_types), {multiple:false, class: "form-control"}) %>
            </div>
            <div class="col-md-6">
              <%= select_tag(:report_format, options_for_select([["Screen",1], ["Excel",2]]), {multiple:false, class: "form-control"}) %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= label_tag :from_date %><br>
            </div>
            <div class="col-md-6">
              <%= label_tag :to_date %><br>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= text_field_tag :from_date, nil, id: 'fromdatepicker', class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <%= text_field_tag :to_date, Date.today.strftime("%m/%d/%Y"), id: 'todatepicker', class: 'form-control' %>
            </div>
          </div>


          <div class="row">
            <div class="col-md-6">
              <%= label_tag :projects %><br>
            </div>
            <div class="col-md-6">
              <%= label_tag :volunteer_categories %><br>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= select_tag :project_ids, options_from_collection_for_select(Project.active.all.order(:name), :id, :name), { :multiple => true, class: "form-control"}  %>
            </div>
            <div class="col-md-6">
              <%= select_tag :volunteer_category_ids, options_from_collection_for_select(VolunteerCategory.all.order(:name), :id, :option_formatter), { :multiple => true, class: "form-control"}  %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= check_box_tag :include_inactive %>Include inactive<br>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-11">
        <div class="actions pull-right">
          <%= submit_tag "Run", class: "btn btn-primary" %>
          <%= link_to 'Back', root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>


