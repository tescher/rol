<% provide(:title, 'Workdays') %>

<h1>Workdays</h1>
<h4 class="center"><%= @project.name %> - Choose a workday or create a new one</h4>
<div class="<%= Utilities::Utilities.system_setting(:no_pagination).blank? ? "container" : "container scrolled-listing" %>">

  <% if @workdays.count > 0 %>
      <ul class="listing">
        <%= render @workdays %>
      </ul>
  <% else %>
      <p class="center">No workdays found. Click New to create one.</p>
  <% end %>

  <% if Utilities::Utilities.system_setting(:no_pagination).blank? %>
      <%= will_paginate %>
  <% end %>
</div>


<div class="row">
  <div class="col-md-11">
    <div class="actions pull-right">
      <%= link_to 'New Workday', new_workday_path({project_id: @project.id}), class: "btn btn-primary" %>
      <%= link_to 'Back', search_workdays_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>