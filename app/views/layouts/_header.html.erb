<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if content_for?(:header) %>
        <%= yield(:header) %>
    <% else %>
        <%= link_to image_tag("org.png", alt: Utilities::Utilities.system_setting(:org_title)), Utilities::Utilities.system_setting(:org_site), id: "logo" %>
        <%= link_to Utilities::Utilities.system_setting(:site_title), root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
                <li><%= link_to "Home", root_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Log out", logout_path, method: "delete" %>
                    </li>
                    <% if defined? Utilities::Utilities.system_setting(:old_system_site) %>
                        <li>
                          <%= link_to Utilities::Utilities.system_setting(:old_system_name), Utilities::Utilities.system_setting(:old_system_site) %>
                        </li>
                    <% end %>
                  </ul>
                </li>
            <% else %>
                <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
    <% end %>
  </div>
</header>