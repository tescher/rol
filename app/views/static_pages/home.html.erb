<% provide(:title, "Home") %>

<div class="center jumbotron">
  <h1><%= ORG_TITLE %></h1>

  <h2>
    <%= SITE_TITLE %>
  </h2>

  <% if logged_in? %>

  <% if current_user.admin?
       @column_width = "col-md-6"
     else
       @column_width = "col-md-12"
     end  %>

  <div class="container">
      <div class="row">
          <div class=<%= @column_width %>>
            <h3><u>Data Entry</u></h3>
            <ul class="list-unstyled">
              <li><h4><%= link_to "Volunteers", search_volunteers_path %></h4></li>
              <li><h4><%= link_to "Work Days", "#" %></h4></li>
            </ul>
          </div>

          <% if current_user.admin? %>
          <div class=<%= @column_width %>>
            <h3><u>Database Management</u></h3>
            <ul class="list-unstyled">
              <li><h4><%= link_to "Users", users_path %></h4></li>
              <li><h4><%= link_to "Projects", "#" %></h4></li>
              <li><h4><%= link_to "Interests", interests_path %></h4></li>
              <li><h4><%= link_to "Interest Categories", interest_categories_path %></h4></li>
            </ul>
          </div>
          <% end %>
      </div>
  </div>

  <% else %>

    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>

  <% end %>

</div>
