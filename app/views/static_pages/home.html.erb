<% provide(:title, "Home") %>

<div class="center jumbotron">
  <h1><%= ORG_TITLE %></h1>

  <h2>
    <%= SITE_TITLE %>
  </h2>

  <% if logged_in? %>

  <div class="container">
      <div class="row">
          <div class="col-md-6">
            <h3><u>Data Entry</u></h3>
          </div>
          <div class="col-id-6">
            <h3><u>Database Management</u></h3>
          </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <ul class="list-unstyled">
            <li><h4><%= link_to "Volunteers", "#" %></h4></li>
            <li><h4><%= link_to "Work Days", "#" %></h4></li>
          </ul>
        </div>
        <div class="col-md-4 col-md-offset-1">
          <ul class="list-unstyled">
            <li><h4><%= link_to "Users", users_path %></h4></li>
          </ul>
        </div>
      </div>
  </div>

  <% else %>

    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>

  <% end %>

</div>
