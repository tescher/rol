<%= form_for(@check_out_all_form, url: self_tracking_check_out_all_path, method: :get,
remote: true, html: {:class => "form-horizontal"}) do |form| %>
<% provide(:title, 'Volunteer Self Tracking') %>
<h1>End of day confirmation</h1>

<p>
  <h3>Are you sure you want to check-out all volunteers have not check-out?<small></small></h3>
</p>

<%= @object = @check_out_all_form
  render 'shared/error_messages' %>

  <div class="row">
    <div class="form-horizontal">
      <div class="col-md-2">
        <%= label_tag "Check-out", nil, class: "control-label"  %>
        <%= form.time_field :check_out_time, class: "form-control" %>
      </div>
    </div>
  </div>

<div class="row">
  <div class="col-md-12">
    <div class="actions pull-right">
      <div class="actions">
         <%= form.submit 'Yes', class: "btn btn-primary" %>
         <%= link_to 'Cancel', self_tracking_index_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
