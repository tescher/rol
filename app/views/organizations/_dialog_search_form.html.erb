<%= form_tag(organizations_path, method: "get", id: "dialogFormSearchOrganizations", remote: true) do %>
    <div class="container dialog-container">
      <div class="row">
        <div class="col-md-5">

          <div class="row">
            <div class="col-md-2">
              <%= label_tag :name  %><br>
            </div>
            <div class="col-md-10">
              <%= text_field_tag :name, nil, class: 'form-control', autofocus: 'true' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              <%= label_tag :city %><br>
            </div>
            <div class="col-md-10">
              <%= text_field_tag :city, nil, class: 'form-control' %>
            </div>
          </div>
        </div>

      </div>

    </div>

    <%= hidden_field_tag :dialog, "true" %>


<% end %>


