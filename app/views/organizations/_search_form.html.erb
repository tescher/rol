<%= form_tag(organizations_path, method: "get") do %>
    <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-1">

          <div class="row">
            <div class="col-md-3">
              <%= label_tag :name  %><br>
            </div>
            <div class="col-md-7">
              <%= autocomplete_field_tag :name, nil, autocomplete_organization_name_organizations_path, 'data-autocomplete-match-path' => organizations_path, class: 'form-control', autofocus: 'true' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <%= label_tag :organization_types %><br>
            </div>
            <div class="col-md-7">
              <%= select_tag :organization_type_ids, options_from_collection_for_select(OrganizationType.all, :id, :name), { :multiple => true, class: "form-control"}  %>
            </div>
          </div>

        </div>

        <div class="col-md-5">

          <div class="row">
            <div class="col-md-2">
              <%= label_tag :city %><br>
            </div>
            <div class="col-md-8">
              <%= text_field_tag :city, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="row">&nbsp;</div>
          <div class="row">
            <div class="col-md-10">
              <div class="checkbox">
                <label>
                  <%= check_box_tag :show_all %> Show all
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    <%= hidden_field_tag :request_format, "html", class: "request_format" %>


    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="actions pull-right">
          <%= submit_tag "Search", class: "btn btn-primary", onclick: "change_val('.request_format','html'); " %>
          <%= submit_tag "Export", class: "btn btn-primary", onclick: "change_val('.request_format','xls'); " %>
          <%= link_to 'Back', root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

<% end %>


