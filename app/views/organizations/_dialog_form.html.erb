<%= form_for(@organization, html: { id: "dialogFormNewOrganization" }, remote: true) do |f| %>
    <%= @object = f.object
        render 'shared/error_messages' %>

    <div class="container dialog-container">
      <div class="row">
        <div class="col-md-7">

          <div class="row">
            <div class="col-md-4">
              <%= f.label :name %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name, class: 'form-control', autofocus: 'true' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :organization_type %><br>
            </div>
            <div class="col-md-8">
              <%= f.select :organization_type_id, options_from_collection_for_select(OrganizationType.all, :id, :name, f.object.organization_type_id), {}, { :multiple => false, class: "form-control"}  %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :contact_name %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_field :contact_name, class: 'form-control', autofocus: 'true' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :email %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :phone %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_field :phone, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :city %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_field :city, class: 'form-control' %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <%= f.hidden_field :dialog, value: "true" %>

<% end %>
