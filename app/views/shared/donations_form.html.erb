<% provide(:title, 'Donations') %>
<h1>Donations from <%= @donator.name %></h1>

<%= form_for(@donator) do |f| %>
    <%= @object = f.object
        render 'shared/error_messages' %>

    <table class="table no-row-border header-border">
      <thead>
      <tr>
        <th class="col-md-2">Date Rec</th>
        <th class="col-md-2">Type</th>
        <th class="col-md-2">Ref No</th>
        <th class="col-md-2">Value ($)</th>
        <th class="col-md-2">Item(s)</th>
        <th class="col-md-2">Designation</th>
        <th class="col-md-2">Honor Of</th>
        <th class="col-md-2">Anon</th>
        <th class="col-md-2">Receipt Sent</th>
        <th class="col-md-2">Notes</th>
        <th class="col-md-1"></th>
      </tr>
      </thead>
      <tbody class="add_donation_fields">
      <%= f.fields_for :donations do |builder| %>
          <%= render "donations/donation_fields", :f => builder %>
      <% end %>
      </tbody>
    </table>

    <%= link_to_add_fields "Add a Donation", f, :donations, "", ".add_donation_fields", "Add a Donation" %>

    <div>&nbsp;</div>


    <div class="row">
      <div class="col-md-11">
        <div class="actions pull-right">

          <%= render partial: "shared/form_actions", locals: {f: f, cancel: edit_polymorphic_path(@object)} %>
        </div>
      </div>
    </div>

<% end %>
