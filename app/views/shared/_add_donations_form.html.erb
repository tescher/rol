<%= form_for(@donator) do |f| %>
    <%= @object = f.object
        render 'shared/error_messages' %>

    <table class="table no-row-border header-border">
      <thead>
      <tr>
        <th class="col-md-3">Date Received</th>
        <th class="col-md-2">Non-monetary</th>
        <th class="col-md-2">Value/Amount ($)</th>
        <th class="col-md-2">Item(s)</th>
        <th class="col-md-2">Designation</th>
        <th class="col-md-2">Honor Of</th>
        <th class="col-md-2">Anonymous</th>
        <th class="col-md-2">Notes</th>
        <th class="col-md-1"></th>
      </tr>
      </thead>
      <tbody class="add_donation_fields">
      <%= f.fields_for :donations do |builder| %>
          <%= render "donation_fields", :f => builder %>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Add a Donation", "#", id:"linkAddDonation" %>

    <div>&nbsp;</div>


    <div class="row">
      <div class="col-md-11">
        <div class="actions pull-right">

          <%= render partial: "shared/form_actions", locals: {f: f, cancel: edit_polymorphic_path(@object)} %>
        </div>
      </div>
    </div>

<% end %>
