<p id="notice"><%= notice %></p>

<h1>Listing Contact Methods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Inactive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_methods.each do |contact_method| %>
      <tr>
        <td><%= contact_method.name %></td>
        <td><%= contact_method.inactive %></td>
        <td><%= link_to 'Show', contact_method %></td>
        <td><%= link_to 'Edit', edit_contact_method_path(contact_method) %></td>
        <td><%= link_to 'Destroy', contact_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact method', new_contact_method_path %>
