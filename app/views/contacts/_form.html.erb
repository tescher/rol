<%= form_for(@contact) do |f| %>
  <%= @object = f.object
      render 'shared/error_messages' %>

  <div class="row">
    <div class="col-md-9 col-md-offset-3">
      <div class="col-md-4">
        <%= f.label "Date" %><br>
        <%= f.text_field :contact_date,  value: @object.date_time.nil? ? DateTime.current.strftime("%m/%d/%Y") : @object.date_time.strftime("%m/%d/%Y") , id: 'contactdatepicker', class: 'form-control' %>
      </div>
      <div class="col-md-4" >
        <%= f.label "Time" %><br>
        <%= f.text_field :contact_time,  value: f.object.date_time.nil? ? DateTime.current.strftime("%l:%M %p") : f.object.date_time.strftime("%l:%M %p"), id: 'contacttimepicker', class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= f.label "Method" %><br>
        <%= f.select :contact_method_id, options_from_collection_for_select(ContactMethod.where(inactive: false), :id, :name, f.object.contact_method_id), { :multiple => false, class: "form-control"}  %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-2">
        <%= f.label "Contact Notes" %>
      </div>
      <div class="col-md-4">
        <%= f.text_area :notes, size: '30x5' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-2">
        <%= f.label "Permanent Notes" %>
      </div>
      <div class="col-md-4">
        <%= text_area_tag :permanent_notes, value: @volunteer.notes, size: '30x5' %>
      </div>
    </div>
  </div>

  <div class="pull-right">
    <%= render partial: "shared/form_actions", locals: {f: f} %>
  </div>

<% end %>
