<%= form_for(@interest) do |f| %>
  <%= @object = f.object
      render 'shared/error_messages' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :interest_category %><br>
        <%= f.select :interest_category_id, InterestCategory.all.collect {|x| [x.name, x.id]}, {}, :multiple => false, class: 'form-control' %>
      </div>
      <div class="checkbox">
        <label>
          <%= f.check_box :highlight %> Highlight
        </label>
      </div>
      <div class="checkbox">
        <label>
          <%= f.check_box :inactive %> Inactive
        </label>
      </div>
    <%= render partial: "shared/form_actions", locals: {f: f} %>
  </div>
</div>
<% end %>
