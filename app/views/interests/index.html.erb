<% provide(:title, 'Interests') %>

<h1>All Interests</h1>

<% if @interests.count > 0 %>
    <ul class="listing">
      <%= render @interests %>
    </ul>
<% else %>
    No interests found. Click New to create one.
<% end %>

<%= will_paginate %>

<div class="actions">
    <%= link_to 'New Interest', new_interest_path, class: "btn btn-primary" %>
    <%= link_to 'Back', root_path, class: "btn btn-primary" %>
</div>