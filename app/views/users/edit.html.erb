<% provide(:title, 'Edit User') %>
<h1>Update
  <% if current_user?(@user) %>
      your
  <% else %>
      <%= @user.name.possessive %>
  <% end %>
  profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
  <% if current_user.admin? && !current_user?(@user) %>
      <%= link_to "Delete User", @user, method: :delete,
                    data: { confirm: "You sure?" } %>
  <% end %>
</div>
