<%= form_for(@user) do |f| %>
    <%= @object = @user
        render 'shared/error_messages' %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control', autofocus: 'true' %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <% if current_user.admin? %>
            <div class="checkbox">
              <label>
                <%= f.check_box :admin %> Admin User
              </label>
            </div>
            <div class="checkbox">
              <label>
                <%= f.check_box :all_donations %> View/Edit all donations
              </label>
            </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :non_monetary_donations %> View/Edit non-monetary donations only
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :can_edit_unowned_contacts %> Can edit unowned contacts
            </label>
          </div>
            <div class="pull-right">
              <%= render partial: "shared/form_actions", locals: {f: f} %>
            </div>
        <% end %>
      </div>
    </div>


<% end %>
