<tr class="hide_on_remove">
  <td>
    <div class="field">
      <div class='input-group date' >
        <%= f.text_field :date_signed,  value: f.object.date_signed.nil? ? Date.today.strftime("%m/%d/%Y") : f.object.date_signed.strftime("%m/%d/%Y"), id: 'signeddatepicker', autofocus: 'true' %>
      </div>
    </div>
  </td>
  <td><%= f.text_field :birthdate, value: (f.object.birthdate && f.object.birthdate.strftime("%m/%d/%Y")), id: 'birthdatepicker'%></td>
  <td><%= f.check_box :adult %></td>
  <td><%= f.text_field :guardian_id %></td>
  <td><%= f.check_box :e_sign %></td>
  <td><%= f.text_area :waiver_text %></td>
  <td><%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", class: "remove_fields" %></td>
</tr>
