<%= form_tag(report_donations_path, method: "get") do %>
    <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-2">

          <div class="row">
            <div class="field">
              <%= label_tag :from_date %><br>
              <div class='input-group date' id='fromdatepicker'>
                <input type='text' name="from_date" id="from_date" class="form-control" autofocus/>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
              </div>
            </div>
            <div class="field">
              <%= label_tag :to_date %><br>
              <div class='input-group date' id='todatepicker'>
                <input type='text' value="<%= Date.today.strftime("%m/%d/%Y") %>" name="to_date" id="from_date" class="form-control" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
              </div>
            </div>

            <div class="field">
              <%= label_tag :city %><br>
              <%= text_field_tag :city, nil, class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="checkbox">
              <label>
                <%= check_box_tag :needing_receipts %> Only donations needing receipts
              </label>
            </div>
            <div class="checkbox">
              <label>
                <%= check_box_tag :volunteers, "1", true %> Volunteers
              </label>
            </div>
            <div class="checkbox">
              <label>
                <%= check_box_tag :organizations, "1", false, id: "donation_report_org"  %> Organizations
              </label>
            </div>
          </div>

          <div id="donation_report_org_types" style="display:none">
            <div class="row">
              <div class="col-md-2">
                <%= label_tag :limit_to %><br>
              </div>
              <div class="col-md-8">
                <%= select_tag :organization_type_ids, options_from_collection_for_select(OrganizationType.all, :id, :name), { :multiple => true, class: "form-control"}  %>
              </div>
            </div>
          </div>

        </div>

      </div>

    </div>
    <%= hidden_field_tag :request_format, "html", class: "request_format" %>
    <%= hidden_field_tag :report_type, "1", class: "report_type" %>

    <div class="row">
      <div class="col-md-11">
        <div class="actions pull-right">
          <% if !current_user.non_monetary %>
              <%= submit_tag "Monetary Donations", class: "btn btn-primary", onclick: "change_val('.request_format','html'); change_val('.report_type', '1');" %>
              <%= submit_tag "Export", class: "btn btn-primary", onclick: "change_val('.request_format','xls'); change_val('.report_type', '1');" %>
          <% end %>
          <%= submit_tag "Non-Monetary Donations", class: "btn btn-primary", onclick: "change_val('.request_format','html'); change_val('.report_type', '2');" %>
          <%= submit_tag "Export", class: "btn btn-primary", onclick: "change_val('.request_format','xls'); change_val('.report_type', '2');" %>
          <%= link_to 'Back', root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>


